%h1 Schools
%table 
  %tr
    %td Abbreviation
    %td Full
  - @schools.each do |school|
    %tr
      %td= school.abbrev
      %td= school.full
      %td= link_to('edit', edit_school_path(school))
      %td= link_to('delete', school, :method => :delete, :data => {:confirm => "Are you sure?"}) 
      -# %td= link_to('delete', School.destroy(school))
= link_to('Add A School', new_school_path)
